<Window x:Class="MasterFloor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloor"
        mc:Ignorable="d"
        Title="МастерПол" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Grid Background="#67ba80" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/Мастер пол.png" Margin="5"/>
                <TextBlock Text="МастерПол" FontWeight="SemiBold" FontSize="24" VerticalAlignment="Center" FontFamily="Segoe UI"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

        <Grid Grid.Row="2" Background="#67ba80">

        </Grid>
    </Grid>
</Window>
