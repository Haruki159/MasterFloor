<Page x:Class="MasterFloor.Pages.AddEditPartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterFloor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPartnerPage">

    <Grid Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                    <TextBlock Text="Наименование:" Margin="0,5"/>
                    <TextBox Text="{Binding PartnerName}" MaxLength="100" Height="25"/>

                    <TextBlock Text="Тип партнера:" Margin="0,5"/>
                    <ComboBox x:Name="ComboPartnerType" DisplayMemberPath="TypeName" Height="25"/>

                    <TextBlock Text="Директор:" Margin="0,5"/>
                    <TextBox Text="{Binding DirectorName}" MaxLength="150" Height="25"/>

                    <TextBlock Text="Email:" Margin="0,5"/>
                    <TextBox Text="{Binding Email}" MaxLength="100" Height="25"/>

                    <TextBlock Text="Телефон:" Margin="0,5"/>
                    <TextBox Text="{Binding PhoneNumber}" MaxLength="20" Height="25"/>

                    <TextBlock Text="Адрес:" Margin="0,5"/>
                    <TextBox Text="{Binding LegalAddress}" MaxLength="255" Height="25"/>

                    <TextBlock Text="ИНН:" Margin="0,5"/>
                    <TextBox Text="{Binding INN}" MaxLength="12" Height="25"/>

                    <TextBlock Text="Рейтинг:" Margin="0,5"/>
                    <TextBox Text="{Binding Rating}" MaxLength="2" Height="25"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Сохранить" Name="BtnSaveChanges" Click="BtnSaveChanges_Click" Width="100" Margin="5"/>
                <Button Content="Отмена" Name="BtnCancel" Click="BtnCancel_Click" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
