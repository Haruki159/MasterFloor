<Page x:Class="MasterFloor.Pages.PartnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterFloor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnersPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid Background="#F4E8D3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ListView Name="SalesListView" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="AliceBlue">

                <!-- Этот стиль заставляет каждый элемент списка растягиваться на всю ширину -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- 
                        Убрали фиксированную ширину и центрирование. 
                        Добавили Margin для отступа между элементами и Padding для внутреннего отступа.
                        -->
                        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" Background="#F4E8D3" 
                                Margin="10,5" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <!-- Левая колонка, занимает всё доступное место -->
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Правая колонка, ширина по содержимому -->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Верхняя строка для заголовка -->
                                    <RowDefinition Height="*"/>
                                    <!-- Нижняя строка для деталей -->
                                </Grid.RowDefinitions>

                                <!-- Верхняя левая часть: Тип | Наименование -->
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PartnerType.TypeName}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text=" | " FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding PartnerName}" FontSize="16" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Верхняя правая часть: Процент -->
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Discount}" 
                                    Name="DiscountPercent" 
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#468966"/>
                                    <TextBlock Text="%" FontSize="18" FontWeight="Bold" Foreground="#468966"/>
                                </StackPanel>

                                <!-- Нижняя часть: Директор, Телефон, Рейтинг -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding DirectorName}" Foreground="Gray"/>
                                    <TextBlock Text="{Binding PhoneNumber}" Margin="0,2,0,0" Foreground="Gray"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Рейтинг: " Foreground="Gray"/>
                                        <TextBlock Text="{Binding Rating}" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Рассчитать материал (Тест)" 
        Click="BtnCalcMaterial_Click" 
        Width="200" Height="30" Margin="5" HorizontalAlignment="Left"/>
            <Button Name="BtnAdd" Content="Добавить" Width="100" Margin="5" Click="BtnAdd_Click"/>
            <Button Name="BtnEdit" Content="Редактировать" Width="100" Margin="5" Click="BtnEdit_Click"/>
            <Button Name="BtnDelete" Content="Удалить" Width="100" Margin="5" Click="BtnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
